<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"

    >
        <ImageView android:layout_width="wrap_content" android:layout_height="200dp"
                   android:background="@drawable/cafe2"
        />
        <TextView
                android:id="@+id/addOrder"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rounded_white"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="24dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="184dp"
                android:elevation="5dp"
                android:paddingRight="10dp"
                android:drawableEnd="@drawable/ic_zoom_in_black_24dp"
                android:text="FIND YOUR SEAT NOW!!"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="7dp"
        />

    </RelativeLayout>
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            <LinearLayout
                    android:id="@+id/dataOrderImg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:elevation="5dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/rounded_white2"
                    android:orientation="vertical">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/cafe1"
                        android:scaleType="centerCrop"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DATA ORDER"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Go To Data Order >"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>